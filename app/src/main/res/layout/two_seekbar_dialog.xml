<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
	
	<SeekBar 
		android:id="@+id/seek_bar_first"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"		
	 />
	
	<TextView
		android:id="@+id/seek_text_first"
		android:layout_below="@id/seek_bar_first"
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		/> 
		
	<SeekBar 
		android:id="@+id/seek_bar_second"
		android:layout_below="@id/seek_text_first"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"		
	 /> 
	
	<TextView
		android:id="@+id/seek_text_second"
		android:layout_below="@id/seek_bar_second"
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		/> 	

</RelativeLayout>