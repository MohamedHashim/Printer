	<Button   
		android:layout_width="120sp"  
		android:layout_height="wrap_content" 
		android:background="#99aacc" 
		android:layout_margin="5sp"
		android:layout_below="@id/bt_set_bold" 
		android:id="@+id/bt_set_lf" 
		android:onClick="set_lf"
		android:text="@string/Enter"
		android:textSize="20sp"   
		/>
	<Button  
		android:layout_width="match_parent"
		android:layout_height="70sp"
		android:background="#88aa00" 
		android:layout_margin="5sp"
		android:layout_below="@id/bt_set_lf"		
		android:id="@+id/bt_printcode"
		android:onClick="printcode"
		android:text="@string/print_onebarcode"
		android:textSize="20sp"  
		/>
	
	<Button  
		android:layout_width="match_parent"
		android:layout_height="70sp"
		android:background="#aaaaff" 
		android:layout_margin="5sp"
		android:layout_below="@id/bt_printcode"		
		android:id="@+id/bt_printimage"
		android:onClick="printimage"
		android:text="@string/print_logopicture"
		android:textSize="20sp"  
		/>
	
	
	<Button  
		android:layout_width="match_parent"
		android:layout_height="70sp"
		android:background="#3333cc" 
		android:layout_margin="5sp"
		android:layout_below="@id/bt_printimage"		
		android:id="@+id/bt_printtest"
		android:onClick="printtes" 
		android:text="@string/print_context" 
		android:textSize="20sp"  
		/>
	
